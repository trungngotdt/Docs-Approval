        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	
	var namecountry=current.submitted_by.location.country;
	
	var lbuquery=new GlideRecord("x_229611_dxc_docs_local_business_unit");	
	lbuquery.addQuery("country.name",namecountry);	
	lbuquery.query();
	lbuquery.next();
	
	var rate=gs.getProperty("x_229611_dxc_docs.DXC_ApprovalRequest_Rate");
	
	current.setValue("lbu",lbuquery.sys_id);
	current.setValue("local_currency",current.lbu.default_currency.sys_id);
	
	var lcurrency=new GlideRecord("fx_rate");
	lcurrency.addQuery("currency",current.local_currency);
	lcurrency.query();
	
	current.setValue("exchange_rate",lcurrency.next()?lcurrency.rate:0);
	//gs.info(current.);
	current.setValue("gbp",current.exchange_rate*parseFloat(rate.toString()));
	
})(current, previous);]]></script>
